<div class="col-md-4 mx-auto">
    <div class="card card-body">
    <form action="/Books/Formulario" method="POST">
        <div class="form-group">
            <input type="text" name="title" id="" class="form-control" placeholder="Titulo del Libro" autofocus required>

        </div>
        <div class="form-group">
            <input type="text" name="author" id="" class="form-control" placeholder="Autor del Libro" required>
        </div>
        <div class="form-group">
            <input type="text" name="isbn" id="" class="form-control" pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])" placeholder="ISBN">
        </div>
        <button class="btn btn-primary btn-block">
            Guardar
        </button>
    </form>
</div>
</div>